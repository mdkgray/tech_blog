<div class="card">
    <h3 class="card-header">Edit Post</h3>
    <form id="edit-post" class="card-body">
        <label for="post-title" class="form-label">Title</label>
        <input  id="post-title" name="post-title" type="text" value="{{post.title}}" class="form-control" />
        <label class="form-label" for="content">Content</label>
        <input id="content" name="content" type="text" value="{{post.content}}" class="form-control" />

        <div class="form-button-layout">
            <button type="submit" class="btn">Update Post</button>
            <button type="button" id="delete-post-btn" class="btn-outline">Delete Post</button>
        </div>
    </form>
</div>

<script src="/js/editPost.js"></script>
<script src="/js/deletePost.js"></script>