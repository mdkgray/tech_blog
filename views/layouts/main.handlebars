<body>
    <header class="col-sm-12 d-flex justify-content-between bg-light">
        <div class="navbar d-flex justify-content-start">
            <div class="container-fluid">
                <h1 class="navbar-brand">The Tech Blog</h1>
            </div>
        </div>

        <div>
            <nav class="navbar navbar-light bg-light float-end p-3 mx-2">
                <a href="/"><i class="fa-solid fa-house" style="padding-right: 8px;"></i>Home</a>
                <a href="/dashboard"><i class="fa-sharp fa-solid fa-gauge-simple-high" style="padding-right: 8px;"></i>Dashboard</a>
                {{#if logged_in}}
                <a class="btn" href="/" id="logout"><i class="fa-solid fa-arrow-right-from-bracket"></i>Logout</a>
                {{else}}
                <a class="btn" href="login"><i class="fa-solid fa-right-to-bracket" style="padding-right:8px;"></i>Login</a>
                {{/if}}            
            </nav>
        </div>
    </header>


    <div>
    {{{ body }}}
    </div>
    

    {{#if logged_in}}
    <script src="/js/logout.js"></script>
    {{else}}
    <script src="/js/signup.js"></script>
    <script src="/js/login.js"></script>
    {{/if}}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
