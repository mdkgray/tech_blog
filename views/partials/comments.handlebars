<div class="comments">
    {{#each this}}
        <div class="card">
            <h3 class="card-header"></h3>
            <div class="card-body">
                <div class="card-text">
                    {{comment_text}}
                </div>
                <div class="meta">
                    -{{user.username}}, {{format_date created_at}}
                </div>
            </div>
        </div>
    {{/each}}
</div>